<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- TODO: Ajustar estos tamaÃ±os para diferentes densidades y completar esta interfaz en general-->
        <ImageView
            android:id="@+id/planta_imagen"
            android:layout_width="40dp"
            android:layout_height="40dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/planta_nombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Lorem ipsum dolor sit amet"/>
            <TextView
                android:id="@+id/planta_descripcion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sed ut perspiciatis"/>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
